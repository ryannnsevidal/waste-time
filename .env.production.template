# Production Environment Configuration
# Copy this to .env and update with your production values

# =====================================
# BACKEND API CONFIGURATION
# =====================================
SCAMMER_WASTE_API_KEY=your-production-api-key-32chars-minimum
SCAMMER_WASTE_ADMIN_TOKEN=your-production-admin-token-64chars-minimum
FLASK_ENV=production
SECRET_KEY=your-flask-secret-key-here
DATABASE_URL=your-production-database-url

# =====================================
# MOBILE APP CONFIGURATION  
# =====================================
EXPO_PROJECT_ID=your-expo-project-id
API_BASE_URL=https://your-domain.com
BACKEND_URL=https://api.your-domain.com

# =====================================
# APP STORE PUBLISHING
# =====================================
APPLE_API_KEY=your-apple-connect-api-key
APPLE_API_ISSUER_ID=your-apple-issuer-id
APPLE_API_KEY_ID=your-apple-key-id

GOOGLE_PLAY_API_KEY=your-google-play-api-key
GOOGLE_PLAY_SERVICE_ACCOUNT=your-service-account.json

# =====================================
# SECURITY & COMPLIANCE
# =====================================
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data
SSL_CERT_PATH=/path/to/ssl/certificate
SSL_KEY_PATH=/path/to/ssl/private-key

# Data retention (days)
LOG_RETENTION_DAYS=30
USER_DATA_RETENTION_DAYS=365

# Compliance flags
GDPR_COMPLIANCE=true
CCPA_COMPLIANCE=true
COPPA_COMPLIANCE=false

# =====================================
# MONITORING & ANALYTICS
# =====================================
SENTRY_DSN=your-sentry-dsn-for-error-tracking
GOOGLE_ANALYTICS_ID=your-google-analytics-id

# =====================================
# AI ENGINE CONFIGURATION
# =====================================
OPENAI_API_KEY=your-openai-api-key
AI_MODEL=gpt-4-turbo
MAX_CONVERSATION_LENGTH=50
RESPONSE_DELAY_MIN=2
RESPONSE_DELAY_MAX=8

# =====================================
# TWILIO INTEGRATION
# =====================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# =====================================
# DEPLOYMENT CONFIGURATION
# =====================================
PORT=5000
WORKERS=4
TIMEOUT=30
MAX_REQUESTS=1000